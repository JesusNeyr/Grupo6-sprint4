                    <label for="information">informacion adicional</label>
                    <input type="text" name="information" placeholder="Peso" value=" <%= productoEncontrado.peso %>" required>
                    <input type="text" name="information" placeholder="TamaÃ±o" value=" <%= productoEncontrado.tamanio %>" crequired> 
